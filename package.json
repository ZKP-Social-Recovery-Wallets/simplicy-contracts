    "rimraf": "^3.0.2",
    "snarkjs": "^0.4.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.0",
    "typechain": "^5.2.0",
    "typescript": "^4.7.2"
  },
  "config": {
    "solidity": {
      "version": "0.8.14"
    },
    "paths": {
      "contracts": "./contracts",
      "circuit": "./circuit",
      "tests": "./test",
      "cache": "./cache",
      "snarkjs-templates": "./snarkjs-templates",
      "semaphore_contracts": "./node_modules/@appliedzkp/semaphore-contracts",
